<div class="form-group mb-4">
  <label for="title">Title</label>
  <input required type="text" name="title" id="title" class="form-control" value="<%= article.title %>">
</div>

<div class="form-group mb-4">
  <label for="description">Description</label>
  <textarea required name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>

<div class="form-group mb-4">
  <label for="blog">Blog</label>
  <textarea required name="blog" id="blog" class="form-control"><%= article.blog %></textarea>
</div>

<a href="/" class="btn btn-secondary mt-4">Cancel</a>

<input type="submit" class="btn btn-primary mt-4" value="Save">